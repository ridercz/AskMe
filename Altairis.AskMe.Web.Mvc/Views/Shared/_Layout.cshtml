@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Environment
@inject Microsoft.Extensions.Options.IOptions<AppSettings> Options
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@(string.IsNullOrWhiteSpace(ViewBag.Title) ? this.Options.Value.Title : ViewBag.Title + " | " + this.Options.Value.Title)</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" integrity="sha256-l85OmPOjvil/SOvVt3HnSSjzF1TUMyT9eV0c2BzEGzU=" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="alternate" type="application/rss+xml" title="RSS" href="@Url.RouteUrl("RssFeed")" />
    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="~/Styles/askme.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="~/Styles/askme.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <header>
        <h1>@this.Options.Value.Title</h1>
        <div>@this.Options.Value.Subtitle</div>
    </header>
    <vc:menu></vc:menu>
    <main>
        @RenderBody()
    </main>
    <footer>
        <ul>
            <li>Copyright &copy; <a href="https://www.altairis.cz/">Altairis</a>, 2017-@DateTime.Today.Year</li>
            <li title="@Environment.EnvironmentName environment">Using ASP.NET MVC Core</li>
            <li><a asp-route="RssFeed"><i class="fas fa-rss"></i> RSS</a></li>
            <li for-login-status="false"><a asp-controller="Account" asp-action="Login">&pi;</a></li>
        </ul>
    </footer>
</body>
</html>
