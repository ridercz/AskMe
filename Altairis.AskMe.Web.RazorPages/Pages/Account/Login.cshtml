@page
@model LoginModel
@{ this.ViewBag.Title = "Přihlášení"; }

<section class="form">
    <header>
        <h2>Přihlášení</h2>
    </header>
    <form method="post">
        <div>
            <input asp-for="Input.UserName" placeholder="Uživatelské jméno" class="half-width" />
            <input asp-for="Input.Password" placeholder="Heslo" class="half-width" />
        </div>
        <div class="field">
            <input asp-for="Input.RememberMe" />
            <label asp-for="Input.RememberMe">pamatuj si mne na tomto počítači</label>
        </div>
        <div asp-validation-summary="All"></div>
        <footer>
            <input type="submit" value="Odeslat" />
        </footer>
    </form>
</section>