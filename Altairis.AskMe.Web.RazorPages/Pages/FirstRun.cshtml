@page
@model Altairis.AskMe.Web.RazorPages.Pages.FirstRunModel
@{
    this.ViewBag.Title = "První spuštění";
}
<section class="form">
    <header>
        <h2>První spuštění - vytvoření uživatele</h2>
    </header>
    <form method="post">
        <div>
            <input asp-for="Input.UserName" placeholder="Uživatelské jméno" />
            <input asp-for="Input.Password" placeholder="Heslo" class="half-width" />
            <input asp-for="Input.PasswordConfirmation" placeholder="Kontrola hesla" class="half-width" />
        </div>
        <div class="field">
            <input asp-for="Input.SeedDemoData" />
            <label asp-for="Input.SeedDemoData">vygenerovat ukázková data</label>
        </div>
        <div asp-validation-summary="All"></div>
        <footer>
            <input type="submit" value="Vytvořit uživatele" />
        </footer>
    </form>
</section>
