@model Altairis.AskMe.Web.Models.PagingInfo
<div class="pager">
    @if (Model.PrevPageNumber > 0) {
        <div class="prev">
            @if (Model.PrevPageNumber > 1) {
                <a asp-route-pageNumber="1"><i class="fa fa-chevron-left"></i><i class="fa fa-chevron-left"></i></a>
            }
            <a asp-route-pageNumber="@Model.PrevPageNumber"><i class="fa fa-chevron-left"></i> Předchozí</a>
        </div>
    }
    @if (Model.NextPageNumber > 0) {
        <div class="next">
            <a asp-route-pageNumber="@Model.NextPageNumber">Následující <i class="fa fa-chevron-right"></i></a>
            @if (Model.NextPageNumber < Model.TotalPages) {
                <a asp-route-pageNumber="@Model.TotalPages"><i class="fa fa-chevron-right"></i><i class="fa fa-chevron-right"></i></a>
            }
        </div>
    }
    <p>Strana @Model.PageNumber z @Model.TotalPages, celkem @Model.TotalRecords položek.</p>
</div>