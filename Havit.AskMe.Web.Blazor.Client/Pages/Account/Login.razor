@page "/account/login"
@inherits LoginBase
@{ Title = "Přihlášení"; }

<section class="form">
	<header>
		<h2>Přihlášení</h2>
	</header>
	<EditForm Model="InputModel" OnValidSubmit="HandleValidSubmit">
		<DataAnnotationsValidator />
		<ServerSideValidator @ref="ServerSideValidator" />
		<div>
			<InputText @bind-Value="InputModel.UserName" type="text" placeholder="Uživatelské jméno" class="half-width" />
			<InputText @bind-Value="InputModel.Password" type="password" placeholder="Heslo" class="half-width" />
		</div>
		<div class="field">
			<InputCheckbox @bind-Value="InputModel.RememberMe" id="rememberme" />
			<label for="rememberme">pamatuj si mne na tomto počítači</label>
		</div>
		<ValidationSummary />
		<footer>
			<input type="submit" value="Odeslat" />
		</footer>
	</EditForm>
</section>