<CascadingAuthenticationState>
	<Router AppAssembly="typeof(Program).Assembly">
		<Found Context="routeData">
			<AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)">
				<NotAuthorized>
					<RedirectToLoginPage />
				</NotAuthorized>
				<Authorizing>
					<h1>Probíhá přihlašování</h1>
				</Authorizing>
			</AuthorizeRouteView>
		</Found>
		<NotFound>
			<LayoutView Layout="typeof(MainLayout)">
				<Havit.AskMe.Web.Blazor.Client.Pages.Errors.Error404 />
			</LayoutView>
		</NotFound>
	</Router>
</CascadingAuthenticationState>